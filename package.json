{
  "name": "byteark-player-angular",
  "version": "0.0.0",
  "scripts": {
    "start": "npm-run-all clean --parallel lib:watch sample:start-waiton",
    "build": "run-s lib:build sample:build",
    "test": "run-p lib:test sample:test",
    "lib:build": "ng build byteark-player-angular",
    "lib:watch": "ng build byteark-player-angular --watch --configuration development",
    "lib:test": "ng test byteark-player-angular",
    "sample:start-waiton": "wait-on dist/byteark-player-angular/package.json && npm run sample:start",
    "sample:start": "ng serve sample",
    "sample:build": "ng build sample",
    "sample:watch": "ng build sample --watch --configuration development",
    "sample:test": "ng test sample",
    "clean": "rimraf dist",
    "serve:ssr:sample": "node dist/sample/server/server.mjs"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^18.2.0",
    "@angular/common": "^18.2.0",
    "@angular/compiler": "^18.2.0",
    "@angular/core": "^18.2.0",
    "@angular/forms": "^18.2.0",
    "@angular/platform-browser": "^18.2.0",
    "@angular/platform-browser-dynamic": "^18.2.0",
    "@angular/platform-server": "^18.2.0",
    "@angular/router": "^18.2.0",
    "@angular/ssr": "^18.2.1",
    "express": "^4.18.2",
    "lodash.isequal": "^4.5.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.10"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.2.1",
    "@angular/cli": "^18.2.1",
    "@angular/compiler-cli": "^18.2.0",
    "@types/express": "^4.17.17",
    "@types/lodash.isequal": "^4.5.8",
    "@types/node": "^18.18.0",
    "@types/video.js": "^7.3.58",
    "autoprefixer": "^10.4.20",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^18.2.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.45",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.10",
    "typescript": "~5.5.2",
    "wait-on": "^8.0.0"
  }
}
